{% extends "layout.html.twig" %}

{% set title = "Mon compte" %}

{% block content %}
    <div class="col-md-12">
        <div class="page-header">
            <h1>Mon compte</h1>
        </div>
        <div class="row">
            <div class="center-block col-sm-12">
                <div class="jumbotron">
                    <table>
                        <tbody>
                            <tr>
                                <td class="col-sm-5">
                                    <form action="{{ path_for('utilisateur.avatar') }}" method="post">
                                        <div class="form-group col-sm-5">
                                            <select class="center-block" id="select" onchange="change();" name="img" style="background: #fff url('{{ base_url() }}/assets/img/user/{{ user.img }}.jpg') 0 0 no-repeat; width: 125px; height: 133px;">
                                                {% for i in 0..28 %}
                                                    <option value="{{ i }}" style="background: #fff url('{{ base_url() }}/assets/img/user/{{ i }}.jpg') 0 0 no-repeat; width: 111px; height: 133px; padding: 0;"></option>
                                                {% endfor %}
                                            </select>
                                            <input type="submit" class="btn btn-sm btn-primary" value="Sauvegarder Avatar">
                                        </div>
                                    </form>
                                </td>
                                <td>
                                    <p>Nom : {{ user.nom }}</p>
                                    <p>Description : {{ user<message }}</p>
                                    <p>Age : {{ user.age }}</p>
                                    <p>
                                        Email : {{ user.email }}
                                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#editEmail">
                                            Modifier
                                        </button>
                                    </p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="modal fade" id="editEmail" tabindex="-1" role="dialog" aria-labelledby="editEmail">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Modifier mon email</h4>
                                </div>
                                <div class="modal-body">
                                    ...
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
                                    <button type="button" class="btn btn-primary">Sauvegarder</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}