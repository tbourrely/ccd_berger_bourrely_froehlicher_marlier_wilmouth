{% extends "layout.html.twig" %}

{% set title = "Créer un groupe" %}

{% block content %}
    <div class="col-md-12">
        <div class="page-header">
            <h1>Crééer un groupe pour une colocation</h1>
        </div>

        <form id='groupe-form' action="{{ path_for('createGroup') }}" method="post">
            {{ csrf() }}

            <div class="form-group col-md-12 {% if flash.errors.description %} has-error {% endif %}">
                <label for="description">Description: </label>

                <textarea name="description" id="description" spellcheck="true" rows="4" class="form-control" value="{{ persistValues.description }}" required></textarea>

                {% if flash.errors.description %}
                    <span class="help-block">{{ flash.errors.description }}</span>
                {% endif %}
            </div>



            <div class="form-group col-md-12">
                <input id="evenement-submit-button" type="submit" class="btn btn-primary" value="Créer le groupe">
            </div>
        </form>
    </div>
{% endblock %}