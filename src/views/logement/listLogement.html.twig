{% extends "layout.html.twig" %}

{% set title = "Liste de logement" %}

{% block content %}
    <div class="col-md-12">
        <div class="page-header">
            <h1>Liste de logement</h1>

            {% if not button %}
                <a class="btn btn-sm btn-primary" href="{{ path_for('listLogementFilter') }}">nombre de places similaire</a>
            {% else %}
                <a class="btn btn-sm btn-primary" href="{{ path_for('listLogement') }}">tous les logements</a>
            {% endif %}

        </div>
        <div class="row">
            {% for l in logements %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail" >
                        <img src="{{ base_url() }}/assets/img/apart/{{ l.id }}.jpg" style="height: 20em">
                        <div class="caption">
                            <h3>Nombre de places : {{ l.places }}</h3>
                            <p><a class="btn btn-primary btn-lg" href="{{ path_for('detailsLogement',{'id' : l.id}) }}" role="button">voir logement</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}